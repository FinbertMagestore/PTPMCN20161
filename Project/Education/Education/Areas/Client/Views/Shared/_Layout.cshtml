<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="/Assets/Client/Images/General/logo-notext.jpg" type="image/x-icon" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @{
        var css = ViewBag.CSS;
    }
    <link href="~/Assets/Client/Css/Pages/@(css).min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Content/ckeditor/ckeditor.js"></script>
</head>
<body>
    <div id="container">
        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-xs-2 col-sm-3">
                        <img src="~/Assets/Client/Images/General/logo.jpg" />
                    </div>
                    <div class="col-xs-10 col-sm-9">
                        <ul class="main-menu">
                            <li>
                                <a href="/Client/Lession">Bài giảng<i class="fa fa-angle-down"></i></a>
                                <ul class="sub-menu sub-menu-1-col">
                                    <li class="icontop"></li>
                                    <li class="top-row">
                                        <a href="/Client/Lession">
                                            Danh sách bài giảng
                                        </a>
                                    </li>
                                    <li class="bottom-row">
                                        <a href="/Client/Lession/Create">
                                            Tạo bài giảng
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="/Client/Category">Chuyên mục<i class="fa fa-angle-down"></i></a>
                                <ul class="sub-menu sub-menu-2-col">
                                    <li class="icontop"></li>
                                    <li class="top-row">
                                        <a href="/Client/Category/Detail/1">
                                            Tin tức sự kiện về giáo dục
                                        </a>
                                    </li>
                                    <li class="">
                                        <a href="/Client/Category/Detail/1">
                                            Kinh nghiệm học tập
                                        </a>
                                    </li>
                                    <li class="bottom-row">
                                        <a href="/Client/Category/Detail/1">
                                            Kinh nghiệm thi cử
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="/Client/Account/Index">Thành viên</a>
                            </li>
                            @using Microsoft.AspNet.Identity;
                            @if (!string.IsNullOrEmpty(User.Identity.GetUserName()))
                            {
                                <li class="">
                                    <a href="/Client/Account/Edit/1">@User.Identity.GetUserName()<i class="fa fa-caret-down"></i></a>
                                    <ul class="sub-menu sub-menu-1-col">
                                        <li class="icontop"></li>
                                        <li class="top-row">
                                            <a href="/Client/Account/Edit/@Membership.GetUser(User.Identity.GetUserName()).ProviderUserKey">
                                                Trang cá nhân
                                            </a>
                                        </li>
                                        <li class="">
                                            <a href="/">
                                                Danh sách bài viết đã đăng
                                            </a>
                                        </li>
                                        <li class="">
                                            <a href="/">
                                                Danh sách bài giảng đã đăng
                                            </a>
                                        </li>
                                        <li class="bottom-row has-boder-top">
                                            <a href="/Admin/Authorization/Logout">
                                                Đăng xuất
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="">
                                    <a href="/Admin/Authorization/Login">Đăng nhập</a>
                                </li>
                                <li class="">
                                    <a href="/Client/Authorization/Register">Đăng ký</a>
                                </li>
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div id="wrapper">
            @RenderBody()
        </div>
        <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-xs-6 col-sm-3">
                        <h3>Education</h3>
                        <ul>
                            <li>
                                <a href="/Client/Pages/Policy">Chính sách bảo mật</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-xs-6 col-sm-3">
                        <h3>Trợ giúp</h3>
                        <ul>
                            <li>
                                <a href="/Client/Pages/Documentation">Hướng dẫn sử dụng</a>
                            </li>
                            <li>
                                <a href="/Client/Feedback">Gửi phản hồi</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-xs-6 col-sm-3">
                        <h3>Về chúng tôi</h3>
                        <ul>
                            <li>
                                <a href="/Client/Pages/AboutUs">Education là gì?</a>
                            </li>
                            <li>
                                <a href="/Client/Pages/UserReview">Ý kiến của thành viên</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-xs-6 col-sm-3">
                        <h3>Kết nối</h3>
                        <a href="#" class=""><i class="fa fa-facebook-square" aria-hidden="true"></i></a>
                        <a href="#" class=""><i class="fa fa-youtube" aria-hidden="true"></i></a>
                        <a href="#" class=""><i class="fa fa-users" aria-hidden="true"></i></a>
                        <a href="#" class=""><i class="fa fa-weixin" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <span class="copyright-left">
                            <i class="fa fa-copyright"></i>
                            Copyright - 2016
                        </span>
                        <span class="copyright-right hidden-xs">
                            Education - Diễn đàn giáo dục được sử dụng nhiều nhất ở Việt Nam
                        </span>
                        <span class="copyright-right visible-xs">
                            Education
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="js/owl.carousel.js"></script>
</body>
</html>