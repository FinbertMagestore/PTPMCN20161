@model Education.Areas.Admin.Model.Category

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="content-header">
        <table cellspacing="0">
            <tbody>
                <tr>
                    <td style="width:50%;"><h3 class="icon-head head-cms-page">Xóa chuyên mục: @Model.Name</h3></td>
                    <td class="form-buttons">
                        <button class="scalable Back" name="submit" onclick="setLocation('/Admin/Category')" type="button" value="Back"><span>Quay lại</span></button>
                        @if (Model.Posts != null && Model.Posts.Count > 0)
                        {
                            <button class="scalable Delete disabled" name="submit" onclick="return false;" type="button" value="Delete"><span>Xóa trang</span></button>
                        }
                        else
                        {
                            <button class="scalable Delete" name="submit" onclick="return confirm('Bạn có muốn xóa chuyên mục này')" type="submit" value="Delete"><span>Xóa trang</span></button>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="entry-edit">
        @Html.HiddenFor(model => model.ID)
        <div class="entry-edit-head">
            <h4 class="icon-head head-edit-form fieldset-legend">Xác nhận xóa chuyên mục: @Model.Name</h4>
            <div class="form-buttons"></div>
        </div>
        <div class="fieldset " id="user_base_fieldset">
            <div class="hor-scroll">
                <table cellspacing="0" class="form-list">
                    <tr>
                        <td class="label">
                            @Html.LabelFor(model => model.Name)
                        </td>
                        <td class="value">
                            @Model.Name
                        </td>
                    </tr>
                    <tr>
                        <td class="label">
                            @Html.LabelFor(model => model.Description)
                        </td>
                        <td class="value">
                            @Model.Description
                        </td>
                    </tr>
                    <tr>
                        <td class="label">@Html.LabelFor(model => model.ImageUrl)</td>
                        <td class="value">
                            @Html.HiddenFor(model => model.ImageUrl)
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img style="max-width: 200px;" id="img-path" src="@Url.Content(Model.ImageUrl)" alt="" />
                            }
                            else
                            {
                                <img style="max-width: 200px;" id="img-path" src="@Url.Content("~/Assets/Admin/Images/default.gif")" alt="" />
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
}