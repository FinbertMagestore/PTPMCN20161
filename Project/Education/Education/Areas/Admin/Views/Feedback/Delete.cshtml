@model Education.Areas.Admin.Model.Feedback

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="content-header">
        <table cellspacing="0">
            <tbody>
                <tr>
                    <td style="width:50%;"><h3 class="icon-head head-cms-page">Xóa phản hồi: @Model.Name</h3></td>
                    <td class="form-buttons">
                        <button class="scalable Back" name="submit" onclick="setLocation('/Admin/Feedback')" type="button" value="Back"><span>Quay lại</span></button>
                        <button class="scalable Delete" name="submit" type="submit" value="Delete"><span>Xóa trang</span></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="entry-edit">
        <div class="entry-edit-head">
            <h4 class="icon-head head-edit-form fieldset-legend">Xóa phản hồi: @Model.Name</h4>
            <div class="form-buttons"></div>
        </div>
        <div class="fieldset " id="user_base_fieldset">
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.Email)
            @Html.HiddenFor(model => model.Created)
            <div class="hor-scroll">
                <table cellspacing="0" class="form-list">
                    <tbody>
                        <tr>
                            <td class="label">
                                @Html.LabelFor(model => model.Name)
                            </td>
                            <td class="value">
                                <span>
                                    @Model.Name
                                    @Html.HiddenFor(model => model.Name)
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td class="label">
                                @Html.LabelFor(model => model.Content)
                            </td>
                            <td class="value">
                                <span>
                                    @Model.Content
                                    @Html.HiddenFor(model => model.Content)
                                </span>
                            </td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <tr>
                                <td class="label">@Html.LabelFor(model => model.ImageUrl)</td>
                                <td class="value">
                                    <img style="max-width: 200px;" id="img-path" src="@Url.Content(Model.ImageUrl)" alt="" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
