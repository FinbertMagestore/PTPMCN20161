@model Education.Areas.Admin.ModelsView.FeedbackModel

@{
    Func<bool, string> getState = state => state ? "Đã xử lý" : "Chưa xử lý";
}

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <table cellspacing="0">
        <tbody>
            <tr>
                <td style="width:50%;"><h3 class="icon-head head-cms-page">Quản trị phản hồi </h3></td>
            </tr>
        </tbody>
    </table>
</div>

@using (Html.BeginForm())
{
    <div class="box_search" style="width: 100%;">
        <table cellspacing="10" cellpadding="0">
            <tbody>
                <tr>
                    <td>Từ khóa</td>
                    <td>@Html.TextBox("Keyword", "", new { @class = "input-text", style = "float:left;height:19px;width:200px;" })</td>
                    <td>Trạng thái:</td>
                    <td>@Html.DropDownList("Status", Model.ListStatus, "--Trạng thái--", new { style = "height: 23px" })</td>
                    <td><input type="submit" name="submit" value="Tìm kiếm" class="form-button" /></td>
                </tr>
            </tbody>
        </table>
    </div>
}
<div id="PageList" class="t-widget t-grid">
    @if (Model.Feedbacks != null && Model.Feedbacks.Count > 0)
    {
        <table id="category" cellspacing="0">
            <thead class="t-grid-header">
                <tr>
                    <th scope="col" class="t-header">
                        <span class="t-link">Tiêu đề</span>
                    </th>
                    <th scope="col" class="t-header">
                        <span class="t-link">Email</span>
                    </th>
                    <th scope="col" class="t-header">
                        <span class="t-link">Trạng thái</span>
                    </th>
                    <th scope="col" class="t-header">
                        <span class="t-link">Thao tác</span>
                    </th>
                </tr>
            </thead>
            <tbody class="ui-sortable">
                @foreach (var item in Model.Feedbacks)
                {
                    <tr displaystate="collapsed">
                        <td style="vertical-align: middle;">
                            <a href="@Url.Action("Edit", "Feedback", new { id = item.ID})">@item.Name</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <span id="id_@(item.ID)">@getState(item.State)</span>
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                            @if (item.State)
                            {
                                <span> | </span>
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>Không có phản hồi nào</h2>
    }
</div>
