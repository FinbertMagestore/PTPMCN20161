@model Education.Areas.Admin.Model.AppUser

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.DateCreated)
    @Html.HiddenFor(model => model.LastActivityDate)
    @Html.HiddenFor(model => model.SecurityStamp)
    @Html.HiddenFor(model => model.FullName)
    @Html.HiddenFor(model => model.Birthday)
    @Html.HiddenFor(model => model.Sex)
    @Html.HiddenFor(model => model.ImageUrl)
    @Html.HiddenFor(model => model.Description)
    @Html.HiddenFor(model => model.Modified)
    @Html.HiddenFor(model => model.Address)
    <div class="content-header">
        <table cellspacing="0">
            <tbody>
                <tr>
                    <td style="width:50%;"><h3 class="icon-head head-cms-page">Sửa thông tin tài khoản</h3></td>
                    <td class="form-buttons">
                        <button class="scalable Back" name="submit" onclick="setLocation('/Admin/Account')" type="button" value="Back"><span>Quay lại</span></button>
                        <button class="scalable Reset" name="submit" type="reset" value="Reset"><span>Reset</span></button>
                        <button class="scalable Delete" name="submit" onclick="setLocation('/Admin/Account/Delete/@Model.Id')" type="button" value="Delete"><span>Xóa trang</span></button>
                        <button class="scalable Save" name="submit" type="submit" value="Save"><span>Lưu trang</span></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="entry-edit">
        <div class="entry-edit-head">
            <h4 class="icon-head head-edit-form fieldset-legend"><a href="#">Sửa thông tin tài khoản</a></h4>
            <div class="form-buttons"></div>
        </div>
        <div class="fieldset " id="user_base_fieldset">
            <div class="hor-scroll">
                <table cellspacing="0" class="form-list">
                    <tbody>
                        <tr>
                            <td class="label">
                                @Html.LabelFor(model => model.Username)
                            </td>
                            <td class="value">
                                @Html.TextBoxFor(model => model.Username, new { @class = "input-text" })
                                <br />@Html.ValidationMessageFor(model => model.Username)
                            </td>
                        </tr>
                        <tr>
                            <td class="label">
                                @Html.LabelFor(model => model.Email)
                            </td>
                            <td class="value">
                                @Html.TextBoxFor(model => model.Email, new { @class = "input-text" })
                                <br />@Html.ValidationMessageFor(model => model.Email)
                            </td>
                        </tr>
                        <tr>
                            <td class="label">
                                @Html.LabelFor(model => model.Password)
                            </td>
                            <td class="value">
                                @Html.PasswordFor(model => model.Password, new { @class = "input-text" })
                                <br />@Html.ValidationMessageFor(model => model.Password)
                            </td>
                        </tr>
                        <tr>
                            <td class="label">
                                @Html.LabelFor(model => model.ValidatePassword)
                            </td>
                            <td class="value">
                                @Html.PasswordFor(model => model.ValidatePassword, new { @class = "input-text" })
                                <br />@Html.ValidationMessageFor(model => model.ValidatePassword)
                            </td>
                        </tr>
                        @if (Model.RoleID != (int)Education.Areas.Admin.Model.Config.Roles.Admin)
                        {
                            <tr>
                                <td class="label">
                                    @Html.LabelFor(model => model.IsActive)
                                </td>
                                <td class="value">
                                    @Html.CheckBoxFor(model => model.IsActive)
                                    <br />@Html.ValidationMessageFor(model => model.IsActive)
                                </td>
                            </tr>
                        }
                       
                        <tr>
                            <td class="label">
                                @Html.LabelFor(model => model.RoleID)
                            </td>
                            <td class="value">
                                @{
                                    object htmlAttributeSub = new { @class = "input-text" };
                                    bool disableSub = false;
                                    @Html.DropDownListFor(model => model.RoleID, new SelectList(Model.Roles, "Id", "Name", !disableSub ? Model.RoleID : 0), "-- Vai trò --", htmlAttributeSub)
                                    <br />@Html.ValidationMessageFor(model => model.RoleID)
                                }
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
                                    }
