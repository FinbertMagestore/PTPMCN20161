@model Education.Areas.Admin.Model.AppUser

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="content-header">
        <table cellspacing="0">
            <tbody>
                <tr>
                    <td style="width:50%;"><h3 class="icon-head head-cms-page">Xóa tài khoản: @Model.Username - @Model.FullName</h3></td>
                    <td class="form-buttons">
                        <button class="scalable Back" name="submit" onclick="setLocation('/Admin/Account')" type="button" value="Back"><span>Quay lại</span></button>
                        @if (Model.CanDelete)
                        {
                            <button class="scalable Delete" name="submit" onclick="return confirm('Bạn có muốn xóa tài khoản này')" type="submit" value="Delete"><span>Xóa trang</span></button>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="entry-edit">
        @Html.HiddenFor(model => model.Id)
        <div class="entry-edit-head">
            <h4 class="icon-head head-edit-form fieldset-legend">Xác nhận xóa tài khoản: @Model.Username - @Model.FullName</h4>
            <div class="form-buttons"></div>
        </div>
        <div class="fieldset " id="user_base_fieldset">
            @if (!Model.CanDelete)
            {
                <h2>Tài khoản đã đăng bài viết hoặc bài giảng nên không thể xóa</h2>
            }
            <div class="hor-scroll">
                <table cellspacing="0" class="form-list">
                    <tbody>
                        <tr>
                            <td class="label">
                                @Html.LabelFor(model => model.Username)
                            </td>
                            <td class="value">
                                @Model.Username
                            </td>
                        </tr>
                        <tr>
                            <td class="label">
                                @Html.LabelFor(model => model.Email)
                            </td>
                            <td class="value">
                                @Model.Email
                            </td>
                        </tr>
                        <tr>
                            <td class="label">
                                @Html.LabelFor(model => model.RoleID)
                            </td>
                            <td class="value">
                                @Model.Role
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}