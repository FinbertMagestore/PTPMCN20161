@model List<Education.Areas.Admin.Model.AppUser>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <table cellspacing="0">
        <tbody>
            <tr>
                <td style="width:50%;"><h3 class="icon-head head-cms-page">Quản trị tài khoản </h3></td>
                <td class="form-buttons">
                    <button class="scalable Add" name="submit" onclick="setLocation('/Admin/Account/Create')" type="button" value="Add">
                        <span>Thêm mới</span>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div id="PageList" class="t-widget t-grid">
    <table id="category" cellspacing="0">
        <thead class="t-grid-header">
            <tr>
                <th scope="col" class="t-header">
                    <span class="t-link">Tài khoản</span>
                </th>
                <th scope="col" class="t-header">
                    <span class="t-link">Email</span>
                </th>
                <th scope="col" class="t-header">
                    <span class="t-link">Vai trò</span>
                </th>
                <th scope="col" class="t-header">
                    <span class="t-link">Thao tác</span>
                </th>
            </tr>
        </thead>
        <tbody class="ui-sortable">
            @foreach (var item in Model)
            {
                <tr displaystate="collapsed">
                    <td style="vertical-align: middle;">
                        <a href="@Url.Action("Edit", "Account", new { id = item.Id})">@item.Username</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <span>@Education.Areas.Admin.Services.AccountService.GetRolesOfUser(item)</span>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
